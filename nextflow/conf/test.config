/*
========================================================================================
    Test Configuration - Uses synthetic E. coli data
========================================================================================
*/

params {
    // Use the synthetic E. coli example data
    hifi      = '../examples/ecoli_synthetic/reads/hifi_reads.fastq.gz'
    ont       = '../examples/ecoli_synthetic/reads/ont_reads.fastq.gz'
    ont_ul    = null  // E. coli example doesn't have UL reads
    hic_r1    = '../examples/ecoli_synthetic/reads/hic_R1.fastq.gz'
    hic_r2    = '../examples/ecoli_synthetic/reads/hic_R2.fastq.gz'
    
    outdir    = './test_results'
    
    // Reduce batch sizes for testing
    correction_batch_size = 10000
    edge_batch_size       = 1000
    hic_batch_size        = 50000
    sv_batch_size         = 500
    
    // Limit parallel jobs for testing
    max_correction_jobs   = 3
    max_edge_jobs         = 2
    max_hic_jobs          = 2
    max_sv_jobs           = 2
    
    // Resource limits for testing (compatible with laptops)
    max_cpus    = 4
    max_memory  = '8.GB'
    max_time    = '4.h'
}
